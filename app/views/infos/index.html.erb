<p id="notice"><%= notice %></p>
<div class="container">
  <%= link_to 'Logout', destroy_user_session_path, method: :delete , class: "btn btn-primary" %>
</div>
<br>
<div class="container well">
  <div>
    <%= form_tag infos_path, class: "well pull-right", style: "width:300px;", method: "get" do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", class: "btn btn-default" %>
    <% end %>
  </div>
<h1 class="">System Configuration</h1>

<table class="pull">
  <thead class="well">
    <tr class="cntr">
      <th class="cntr">Sr.</th>
      <th class="cntr">Name</th>
      <th class="cntr">Monitor</th>
      <th class="cntr">Motherboard</th>
      <th class="cntr">Processor</th>
      <th class="cntr">Ram</th>
      <th class="cntr">Hdd</th>
      <th class="cntr">Cabinet</th>
      <th class="cntr">Keyboard</th>
      <th class="cntr">Mouse</th>
      <th class="cntr">Mousepad</th>
      <th class="cntr">Camera</th>
      <th class="cntr">Speaker</th>
      <th class="cntr">Headphone</th>
      <th colspan="3" class="cntr">Actions</th>
    </tr>
  </thead>

  <tbody class="well">
    <% @infos.each do |info| %>
      <tr>
        <td class="cntr"><%= info.id %></td>
        <td class="cntr"><%= info.name %></td>
        <td class="cntr"><%= info.monitor %></td>
        <td class="cntr"><%= info.motherboard %></td>
        <td class="cntr"><%= info.processor %></td>
        <td class="cntr"><%= info.ram %></td>
        <td class="cntr"><%= info.hdd %></td>
        <td class="cntr"><%= info.cabinet %></td>
        <td class="cntr"><%= info.keyboard %></td>
        <td class="cntr"><%= info.mouse %></td>
        <td class="cntr"><%= info.mousepad %></td>
        <td class="cntr"><%= info.camera %></td>
        <td class="cntr"><%= info.speaker %></td>
        <td class="cntr"><%= info.headphone %></td>
        <td class="cntr"><%= link_to 'Show', info, class: "btn btn-primary" %></td>
        <td class="cntr"><%= link_to 'Edit', edit_info_path(info), class: "btn btn-warning" %></td>
        <td class="cntr"><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <div class = "well col-md-12">
    <%= link_to 'New Info', new_info_path, class: "btn btn-primary" %>
    <%= link_to 'Download CSV', download_csv_infos_path(format: 'csv'), class: "btn btn-primary" %>

    <%= form_tag import_infos_path, multipart: true, style: "display: inline-block !important;" do %>
      <%= file_field_tag :file, style: "display: inline-block !important;" %>
      <%= submit_tag "Upload CSV", class: " btn btn-primary" %>
    <% end %>
  </div>

  </div>

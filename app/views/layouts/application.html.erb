<!DOCTYPE html>
<html>
  <head>
    <title>SystemConfiguration</title>
    <%= csrf_meta_tags %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='https://fonts.googleapis.com/css?family=Exo+2' rel='stylesheet' type='text/css'>
    <%= favicon_link_tag 'icon_computer.png', :rel => 'shortcut icon' %>
  </head>

  <body>
    <%= nav_bar fixed: :top, brand: "<span class='text-default'>System Configuration".upcase.html_safe, responsive: true do %>
      <%= menu_group do %>
        <%= menu_divider %>
      <% end %>
        <%= menu_group pull: :right do %>
          <%# if user_signed_in? %>
            <%#= drop_down "<i class='fa fa-bars' aria-hidden='true'></i> Menu".html_safe do %>
              <!-- <div class="row">
                <div class="col-lg-4">
                  <strong class="text-default">Operations</strong><hr> -->
                    <%#= menu_item "New Information", new_info_path %>
                <!-- </div>
                <div class="col-lg-4">
                <strong class="text-default">Exports</strong><hr> -->
                  <%#= menu_item "Upload CSV", "#" %>
                  <%#= menu_item "Download CSV", "#" %>
                  <%#= menu_item "Download PDF", "#" %>
                <!-- </div>
              </div> -->
            <%# end %>
          <%# end %>
          <% if current_user %>
            <%= menu_item "<i class='glyphicon glyphicon-user' aria-hidden='true'></i> #{current_user.email}".html_safe %>
            <%= menu_item "<i class='glyphicon glyphicon-log-out' aria-hidden='true'></i> Log Out".html_safe, "javascript:void(0)", data:{ toggle: "modal", target: "#LogoutModal" }  %>
          <% else %>
            <%= menu_item '<i class="glyphicon glyphicon-log-in" aria-hidden="true"></i>&nbsp;Login'.html_safe, new_user_session_path %>
          <% end %>
        <% end %>
    <% end %>
    <br><br>
    <p class="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="row col-md-12">
        <div class="col-lg-12">
             <%#= bootstrap_flash %>
            <%= yield %>
        </div>
      </div>
    </div>

    <!-- Modal open when user click on Logout Button...  -->
    <div id="LogoutModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <!-- <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modal Header</h4>
          </div> -->
          <div class="modal-body">
            <h3>Are you sure want to Logout ?</h3>
          </div>
          <div class="modal-footer">
            <%= link_to "Yes", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <p>&copy; Company 2016 <span class="pull-right"> powered By - Vebuin Inc. </span></p>
    </footer>
  </body>
</html>
